<h1>Listing buildings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>City</th>
    <th>State</th>
    <th>Type</th>
    <th>Year built</th>
    <th>Featured</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @presenter.buildings.each do |building| %>
  <tr>
    <td><%= building.name %></td>
    <td><%= building.description %></td>
    <td><%= building.city %></td>
    <td><%= building.state %></td>
    <td><%= building.type %></td>
    <td><%= building.year_built %></td>
    <td><%= building.featured %></td>
    <td><%= link_to 'Show', building %></td>
    <td><%= link_to 'Edit', edit_building_path(building) %></td>
    <td><%= link_to 'Destroy', building, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

